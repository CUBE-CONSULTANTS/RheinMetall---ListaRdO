<mvc:View controllerName="listardo.listardo.controller.Home"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:layout="sap.ui.layout">
<Page
class="sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiResponsivePadding--content"
floatingFooter="true"
>
    <customHeader>
        <Bar>
            <contentLeft>
                <Title
                    text="{i18n>titleprogetto}"
                    titleStyle="H3"
                />
            </contentLeft>
            <contentRight>
                <Image
                        alt="Rheinmetall Logo"	
                        height="38.00000000px"
                        width="100%"
                        src="../public/images/Rheinmetall_Logo_2021.jpg"
                >
                </Image>
            </contentRight>
        </Bar>
    </customHeader>

    <OverflowToolbar
        design="Solid"
        class="sapUiSmallMarginTopBottom"
        height="6vh"
    >
        <ToolbarSpacer />
        <ToolbarSpacer />
        <Text 
            text="AVIOMETAL, Via Sempione 15  Arsago Seprio VA    "
            class="title"
        />
    </OverflowToolbar>
    <content>
        <core:Fragment fragmentName="listardo.listardo.view.Fragment.filterBar" />
        <core:Fragment fragmentName="listardo.listardo.view.Fragment.treeTable" />
    </content>
    <footer class="sapUiLargeMarginTop">
        <OverflowToolbar design="Transparent"></OverflowToolbar>
    </footer>
    </Page>
</mvc:View>
