<mvc:View controllerName="listardo.listardo.controller.Home"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:layout="sap.ui.layout">
<Page
class="sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiResponsivePadding--content"
floatingFooter="true" 
showFooter="true" 
>
    <customHeader>
        <Bar>
            <contentLeft>
                <Title
                    text="{i18n>titleprogetto}"
                    titleStyle="H3"
                />
            </contentLeft>
            <contentRight>
                <Image
                        alt="Rheinmetall Logo"	
                        height="38.00000000px"
                        width="100%"
                        src="../public/images/Rheinmetall_Logo_2021.jpg"
                >
                </Image>
            </contentRight>
        </Bar>
    </customHeader>

    <OverflowToolbar
        visible="{= ${userModel>/tipoUtente} === 'Interno' ? true : false }"
        design="Solid"
        class="sapUiSmallMarginTopBottom"
        height="6vh"
    >
        <ToolbarSpacer />
        <ToolbarSpacer />
        <Title
            text="{i18n>Fornitore}"
            titleStyle="H3"
            visible="{= ${userModel>/tipoUtente} === 'Interno' ? true : false }"
        />
    </OverflowToolbar>

    <content>
        <core:Fragment fragmentName="listardo.listardo.view.Fragment.filterBar" />
        <core:Fragment fragmentName="listardo.listardo.view.Fragment.treeTable" />
    </content>
    <footer>
        <OverflowToolbar design="Solid">
            <Button
                visible="{= ${userModel>/tipoUtente} === 'Interno' ? false : true }"
                icon="sap-icon://print"
                text="{i18n>StampaRdO}"
                type="Emphasized"
                
            />
            <ToolbarSpacer/>
            <Button
            visible="{= ${userModel>/tipoUtente} === 'Interno' ? false : true }"
            icon="sap-icon://print"
            text="{i18n>SaveBozza}"
            type="Emphasized"
            
        />
        <ToolbarSpacer/>
        <Button
        visible="{= ${userModel>/tipoUtente} === 'Interno' ? false : true }"
        icon="sap-icon://print"
        text="{i18n>Save}"
        type="Emphasized"
        
    />
        </OverflowToolbar>
    </footer>
    </Page>
</mvc:View>
